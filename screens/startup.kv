MDScreen:
	name:"Sscreen"
	md_bg_color:1,1,1,1
	AnchorLayout:
		anchor_y:"top"
		Image:
			pos_hint:{"center_x":0.5,"center_y":0.9}
			source:"assets/wave.png"
			size_hint:None,None
			keep_ratio:False
			allow_stretch:True
			size:app.y,"150dp"
	MDLabel:
		pos_hint:{"center_x":0.5,"center_y":0.78}
		text:"SRAPS App!"
		font_name:"assets/Poppins-Bold.ttf"
		font_size:"35sp"
		halign:"center"
	AnchorLayout:
		Image:
			source:"assets/wel.jpg"
			size_hint:None,None
			keep_ratio:True
			allow_stretch:True
			size:"350dp","300dp"
	RelativeLayout:
		MyMDCard:
			md_bg_color:app.theme_cls.primary_light
			pos_hint:{"center_x":0.5,"center_y":0.08}
			style:"elevated"
			size_hint:None,None
			shadow_offset:(0,0.05)
			size:app.y-dp(20),dp(60)
			elevation:dp(40)
			shadow_offset:(0.0, 0.01)
			shadow_softness :dp(10)
			radius:dp(20)
			ripple_behavior:True
			on_press:app.screen_manager.transition.direction = 'left';app.screen_manager.current = "Sscreen1"
			RelativeLayout:
				MDLabel:
					font_name:"assets/Poppins-Regular.ttf"
					font_size:"20sp"
					halign:"center"
					text:"Take a Tour"
				MDIconButton:
					pos_hint:{"center_x":0.85,"center_y":0.5}
					icon:"arrow-right"
					on_press:app.screen_manager.transition.direction = 'left';app.screen_manager.current = "Sscreen1"

