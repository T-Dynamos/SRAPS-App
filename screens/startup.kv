MDScreen:
	name:"Sscreen3"
	md_bg_color:1,1,1,1
	MDLabel:
		pos_hint:{"center_x":0.5,"center_y":0.85}
		text:"Are these details correct?"
		font_name:"assets/Poppins-Regular.ttf"
		font_size:"25sp"
		halign:"center"
	RelativeLayout:
		AnchorLayout:
			anchor_y:"top"
			anchor_x:"left"
			MDIconButton:
				icon:"chevron-left"
				on_press:app.screen_manager.current = "Sscreen2"
	RelativeLayout:
		AnchorLayout:
			pos_hint:{"center_x":0.5,"center_y":0.44}
			anchor_y:"bottom"
			Image:
				source:"assets/success.png"
				size_hint:None,None
				keep_ratio:True
				allow_stretch:True
				size:"150dp","150dp"
	AnchorLayout:
		pos_hint:{"center_x":0.5,"center_y":0.5}
		size_hint:None,None
		size:app.y,"250dp"
		MyMDCard:
			padding:dp(10)
			size_hint:None,None
			size:app.y-dp(20),"250dp"
			radius:"20dp"
			md_bg_color:app.theme_cls.bg_darkest
			orientation:"vertical"
			BoxLayout:
				MDLabel:
					text:"Admission No       :"
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"
				MDLabel:
					text:app.text[0]
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"
			BoxLayout:
				MDLabel:
					text:"Class and Section  :"
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"
				MDLabel:
					text:app.text[2]
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"
			BoxLayout:
				MDLabel:
					text:"Father's Name      :"
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"
				MDLabel:
					text:app.text[3]
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"
			BoxLayout:
				MDLabel:
					text:"Mother's Name      :"
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"
				MDLabel:
					text:app.text[4]
					font_name:"assets/Poppins-Regular.ttf"
					halign:"left"

	MDFlatButton:
		pos_hint:{"center_x":0.5,"center_y":0.25}
		size_hint:None,None
		size:dp(150),"50dp"
		text:"Yes !"
		md_bg_color:app.theme_cls.primary_light
		line_color:app.theme_cls.primary_light
		on_press:app.stu();app.stop()
