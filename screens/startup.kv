MDScreen:
	name:"Sscreen2"
	md_bg_color:1,1,1,1
	AnchorLayout:
		anchor_y:"top"
		Image:
			pos_hint:{"center_x":0.5,"center_y":0.9}
			source:"assets/wave2.png"
			size_hint:None,None
			keep_ratio:False
			allow_stretch:True
			size:app.y,"160dp"
	MDLabel:
		pos_hint:{"center_x":0.5,"center_y":0.78}
		text:"What's your Admission No.?"
		font_name:"assets/Poppins-Regular.ttf"
		font_size:"25sp"
		halign:"center"

	RelativeLayout:
		AnchorLayout:
			anchor_y:"top"
			anchor_x:"left"
			MDIconButton:
				icon:"chevron-left"
				on_press:app.screen_manager.transition.direction = 'right';app.screen_manager.current = "Sscreen1"
	RelativeLayout:
		AnchorLayout:
			pos_hint:{"center_x":0.5,"center_y":0.44}
			anchor_y:"bottom"
			Image:
				source:"assets/login.png"
				size_hint:None,None
				keep_ratio:True
				allow_stretch:False
				size:"300dp","300dp"

		MDFlatButton:
			size_hint:None,None
			size:dp(150),"50dp"
			pos_hint:{"center_x":0.5,"center_y":0.44}
			text:"Proceed"
			md_bg_color:app.theme_cls.primary_light
			line_color:app.theme_cls.primary_light
			on_press:app.get_admno() if admno.text != ""  and "-"  in str(ran.text) and len(ran.text)== 10 and len(admno.text)==5 or len(admno.text)==4 else app.Toast("Fill select and fill both required fields correctly")
	MDBoxLayout:
		pos_hint:{"center_x":0.5,"center_y":0.67}
		size_hint:None,None
		size:dp(200),"50dp"
		MDTextField:
			id:admno
			hint_text:"Admission Number"
			mode:"fill"
			max_text_length: 5
			font_name:"assets/Poppins-Regular.ttf"
			font_name_hint_text:"assets/Poppins-Regular.ttf"
	MDBoxLayout:
		pos_hint:{"center_x":0.5,"center_y":0.54}
		size_hint:None,None
		size:dp(200),"50dp"
		MDTextField:
			id:ran
			hint_text:"Enter dob yyyy-mm-dd "
			mode:"fill"
			max_text_length: 10
			font_name:"assets/Poppins-Regular.ttf"
			font_name_hint_text:"assets/Poppins-Regular.ttf"
